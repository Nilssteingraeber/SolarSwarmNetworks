[Unit]
Description=Add labels to dockerd and become leader or request join tokens to join docker swarm as worker
Wants=network-online.target batman_adv_setup.service
After=network-online.target batman_adv_setup.service

[Service]
Type=simple
Restart=on-failure
RestartSec=2
ExecStart=/usr/local/bin/docker_init.bash
Environment=HOME=/home/own_name

[Install]
WantedBy=multi-user.target
